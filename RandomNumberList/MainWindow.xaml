<Window x:Class="RandomNumberList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandomNumberList"
        mc:Ignorable="d"
        Title="" Height="450" Width="800">
    <Grid>
        <ListBox ItemsSource="{Binding Numbers}" />
        <TextBlock Text="From:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="210,11,0,0"/>
        <TextBlock Text="To:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="350,11,0,0"/>
        <TextBox Name="tbLower" Text="{Binding Start}" Margin="245,10,0,0" HorizontalAlignment="Left" Width="100" VerticalAlignment="Top"/>
        <TextBox Name="tbUpper" Text="{Binding End}" Margin="370,10,0,0" HorizontalAlignment="Left" Width="100" VerticalAlignment="Top"/>
        <Button Content="Refresh" Width="75" Click="Button_Click" HorizontalAlignment="Left" Margin="485,9,0,0" VerticalAlignment="Top"/>
    </Grid>

</Window>
